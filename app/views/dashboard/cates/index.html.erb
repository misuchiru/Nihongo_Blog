<p id="notice"><%= notice %></p>

<h1>類別管理</h1>
<hr>
<%= link_to 'New Cate', new_dashboard_cate_path, :class => 'button' %>
<br>
<br>

<table class="table">
  <thead>
    <tr>
      <th>類別名稱</th>
      <th colspan="3">管理</th>
    </tr>
  </thead>

  <tbody>
    <% @cates.each do |cate| %>
      <tr>
        <td><%= cate.name %></td>
        <td><%= link_to 'Show', dashboard_cate_path(cate) %></td>
        <td><%= link_to 'Edit', edit_dashboard_cate_path(cate) %></td>
        <td><%= link_to 'Destroy', dashboard_cate_path(cate), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>