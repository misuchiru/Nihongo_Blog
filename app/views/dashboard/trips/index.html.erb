<p id="notice"><%= notice %></p>

<h2>類別管理</h2>
<hr>
<%= link_to '新增旅行', new_dashboard_trip_path, :class => 'btn btn-info' %>
<br>
<br>

<table class="table">
  <thead>
    <tr>
      <th>旅行名稱</th>
      <th colspan="3">管理</th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.name %></td>
        <td><%= link_to '檢視', dashboard_trip_path(trip), class: "btn btn-default btn-sm" %></td>
        <td><%= link_to '編輯', edit_dashboard_trip_path(trip), class: "btn btn-info btn-sm" %></td>
        <td><%= link_to '刪除', dashboard_trip_path(trip), method: :delete, data: { confirm: '確定要刪除嗎?' }, class: "btn btn-warning btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>