<p id="notice"><%= notice %></p>

<h1>文章管理</h1>
<hr>
<%= link_to 'New Post', new_dashboard_post_path, :class => 'button' %>
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th>名稱</th>
      <th>時間</th>
      <th colspan="3">管理</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.created_at %></td>
        <td><%= link_to 'Show', dashboard_post_path(post) %></td>
        <td><%= link_to 'Edit', edit_dashboard_post_path(post) %></td>
        <td><%= link_to 'Destroy', dashboard_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>