<% @posts.each do |post| %>
  <article class="wow fadeInDown">
    <div class="blog-content">
      <h2 class="blogpost-title">
        <%=  link_to post.title, post %>
      </h2>
      <div class="blog-meta">
        <span><%= post.cate.name %></span>
        <span><%= post.created_at.strftime("%B %d, %Y") %></span>
      </div>
      <%= raw post.tags.map(&:name).map { |t| link_to t, tag_path(t), class: "btn btn-success btn-xs" }.join(', ') %>
      <p>
        <%= truncate(post.body, :length => 100) %>
      </p>
      <%=  link_to "更多內容", post, class: "btn btn-dafault btn-details" %>
    </div>
  </article>
    <hr>
<% end %>