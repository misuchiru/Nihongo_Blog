<!DOCTYPE html>
<html>
  <head>
    <%= render_page_title_tag %>
    <%= description_meta_tag("分享學習日語的心得及日本旅遊的行程") %>
    <%= render_page_description_meta_tag %>
    <%= favicon_link_tag(source='favicon.png', options={}) %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= render 'common/css' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'common/topNavbar' %>
    <%= render 'common/banner' %>
    <section id="blog-full-width">
      <div class="container">
        <div class="row">
          <div class="col-md-8">
            <%= yield %>
            <%= will_paginate @paginate if @paginate %>
          </div>
          <div class="col-md-4">
            <%= render 'common/siderMenu' %>
          </div>
        </div>
      </div>
    </section>
    <%= render 'common/js' %>
  </body>
  <%= render 'common/googleAnalytics' %>
</html>
